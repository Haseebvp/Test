<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.localqueen.localqueenassignment.utils.CircleImageView
        android:id="@+id/cv_comment_user"
        android:layout_width="@dimen/margin_35"
        android:layout_height="@dimen/margin_35"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_6"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_toRightOf="@+id/cv_comment_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="@dimen/margin_4">

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12"
            android:padding="@dimen/margin_4"
            android:text="Ramya, Coimbatore, Hi please send updates to my number" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Number"
                android:padding="@dimen/margin_4"
                android:textSize="@dimen/text_10"/>
            <TextView
                android:layout_toRightOf="@+id/viewnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:padding="@dimen/margin_4"
                android:textSize="@dimen/text_10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:layout_alignParentRight="true"
                android:text="20"/>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>